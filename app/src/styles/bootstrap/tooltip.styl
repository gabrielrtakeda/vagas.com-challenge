@import '../variables/colors'
@import '../variables/sizes'
@import '../mixins'

.tooltip
  top -65px !important

  &.in
    opacity 1

  .tooltip-inner
    padding 10px 15px
    font-family 'Titillium Web', sans-serif
    font-weight 600
    color tooltip-text-color
    background tooltip-background-color
    border 3px solid tooltip-border-color
    font-size(14px)

    &:before
      content ''
      position absolute
      width 0
      height 0
      left 50%
      bottom -6px
      border-color transparent
      border-top-color tooltip-border-color
      border-style solid
      border-width 13px 13px 0
      margin-left -13px
      z-index 1

  &.top .tooltip-arrow
    z-index 2
    bottom -2px
    border-top-color tooltip-background-color
    border-width 10px 10px 0
    margin-left -10px
