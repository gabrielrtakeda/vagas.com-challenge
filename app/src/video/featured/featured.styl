@import '../../styles/variables/colors'
@import '../../styles/variables/sizes'
@import '../../styles/mixins'

section.video-featured
  footer
    .card-description
      margin-top 16px
      padding 24px
      border 1px solid cards-border-color
      position relative
      box-shadow(0 2px 2px 0 rgba(0, 0, 0, .3))

      &.folded
        p
          max-height 76px
          overflow hidden
          margin 0

          &:after
            content ''
            width 100%
            height 110px
            position absolute
            background rgba(255, 255, 255, .6)
            left 0
            bottom 0
            background -moz-linear-gradient(top, rgba(255,255,255,0) 0%, #fff 70%, #fff 100%)
            background -webkit-linear-gradient(top, rgba(255,255,255,0) 0%, #fff 70%, #fff 100%)
            background linear-gradient(to bottom, rgba(255,255,255,0) 0%, #fff 70%, #fff 100%)
            cursor pointer

      .piece-header
        h4
          position relative
          margin 0 0 18px

          .title
            width 80%

          .infos
            position absolute
            right 0
            top 0

            > span[class*='icon-']
              color cards-infos-color
              margin-left 8px

              &:hover
                opacity .8

              & + div *
                white-space nowrap

      p
        color cards-text-color
        font-family: 'Lato', sans-serif;
