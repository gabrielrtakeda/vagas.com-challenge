@import '../styles/variables/colors'
@import '../styles/variables/sizes'
@import '../styles/mixins'

.video-thumbnails-container
  position relative
  z-index 1

video-thumbnail
  & + video-thumbnail
    margin-top 16px

  display block
  .video-thumbnail
    opacity .5
    max-height 95px
    overflow hidden
    position relative
    display block

    &:hover
      opacity 1
      cursor pointer
      text-decoration none

    &:active
      .thumbnail
        img
          filter(brightness(.95))

    &:focus
      text-decoration none

    .thumbnail
      display inline-block
      width 170px
      height 95px
      padding 0
      border none
      overflow hidden
      border-radius 0
      position relative
      margin 0
      float left

      img
        position absolute
        width 170px
        height 95px
        left 0
        top 50%
        margin-top -48px

    .data
      height 95px
      position relative
      margin-left 178px

      h4
        display inline-block
        margin 0
        padding 0
        overflow hidden
        max-height 60px

      .infos
        position absolute
        left 0
        bottom 0

        span
          vertical-align middle
          color thumbnail-card-info-icon-color
          font-family 'Titillium Web', sans-serif
          font-weight 600

        span[class*='icon-']
          margin-right 5px
          font-weight 400
          font-size(18px)
